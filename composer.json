    "require-dev": {
        "overtrue/phplint": "^0.2.4",
        "phpunit/php-invoker": "^1.1",
        "docker-php/docker-php": "^1.24",
        "fzaninotto/faker": "^1.7",
        "mockery/mockery": "0.9.9",
        "phpcompatibility/phpcompatibility-wp": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
